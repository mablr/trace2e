# Scenario 1: Company receives CV from user
# Node: company-node
# Description: Bind socket and receive CV

# Step 1: Bind to receive connection
BIND company-node:8080

# Step 2: Read incoming CV data
READ stream://company-node:8080::user-node:8080

# Step 3: Store received CV
CREATE /tmp/received_cv.txt

# Step 4: Save CV to file
WRITE file:///tmp/received_cv.txt
